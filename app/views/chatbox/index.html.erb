<h4 class="ui center aligned icon header">
  <i class="circular coffee inverted blue icon"></i>
  Say Something
</h4>

<div class="ui grid">
	<div class="twelve wide column">
		<div class="ui card fluid raised chatbox">
			<div class="content">
				<div class="ui feed">
					<%= render @messages %>
				</div>
			</div>
			<div class="extra content">


				<form class="ui reply form">
			    <div class="field">
			      <div class="ui fluid input icon">
			      	<input type="text" placeholder="Enter a message...">
			      	<i class="ui blue paper plane icon"></i>
			    	</div>
			    </div>
			    
			  </form>
			</div>
		</div>
	</div>
	<div class="four wide column">
		<div class="ui card fluid raised chatbox">
			<div class="content">
				<div class="ui inverted vertical menu">
				  <a class="item">
				    Home
				  </a>
				  <a class="item">
				    Messages
				  </a>
				  <a class="item">
				    Friends
				  </a>
				</div>
			</div>
		</div>
		
	</div>
</div>
